#!/bin/sh

bspc config border_width 5
bspc config window_gap   8
bspc config top_padding  0

bspc config split_ratio           0.5
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus-follows-pointer true
bspc config history-aware-focus   true

bspc monitor -d I II III IV V VI VII VIII IX X

bspc rule --add Dissenter-browser desktop='I'
bspc rule --add Emacs state=tiled
bspc rule --add Steam desktop='III'

# Autostart
sxhkd -c $HOME/.sxhkdrc &
$HOME/.scripts/launch.sh # Polybar

# Make sure Polybar is hidden on fullscreen
xdo lower -N "Polybar"
xdo above -N "Polybar" -t $(xdo id -N Bspwm -n root)
